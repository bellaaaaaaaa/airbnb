<h1> Edit Listing </h1>

<%= form_with(model: @listing, local: true) do |form| %>
<p>
    <%= form.label :Name %><br>
    <%= form.text_field :name %>
</p>
  <p>
    <%= form.label :Type %><br>
    <%= form.text_area :roomtype %>
  </p>
  <p>
    <%= form.label :"Number of Guests" %><br>
    <%= form.text_area :num_guests %>
  </p>
  <p>
    <%= form.label :"Number of Bedrooms" %><br>
    <%= form.text_area :num_beds %>
  </p>
  <p>
    <%= form.label :"Number of Bathrooms" %><br>
    <%= form.text_area :num_baths %>
  </p>
  <p>
    <%= form.label :"Price/Night" %><br>
    <%= form.text_area :price_per_night %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', my_list_path %>